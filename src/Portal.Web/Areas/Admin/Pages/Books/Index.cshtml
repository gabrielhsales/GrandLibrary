@page
@model Portal.Web.Areas.Admin.Pages.Books.IndexModel

@{
    Layout = "_Layout";
}

@if (TempData["message"] is not null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["message"]
    </div>
}

<a class="btn btn-primary mb-3" asp-page="./register">Register New Book</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th> Name</th>
            <th>Year</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Name</td>
                <td>@book.PublishedYear</td>
              <td>
              <a asp-page="./edit" asp-route-bookId="@book.Id" class="btn btn-info">Edit</a>
              </td>
            </tr>
        }
    </tbody>
</table>